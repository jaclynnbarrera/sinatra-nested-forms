<h1>Display your Pirate here</h1>
    <div class="pirate">
        <h3>Name: <%= @pirate.name %></h3><br>
        <h4>Weight: <%= @pirate.weight %></h4>
        <h4>Height: <%= @pirate.height %></h4>
    </div><br>

<h2>Display your first ship here</h2>
    <div class="ship">
        <h3>Name: <%= @ships.first.name %></h3><br>
        <h4>Type: <%= @ships.first.type %></h4>
        <h4>Booty: <%= @ships.first.booty %></h4>
    </div><br>

<h2>Display your second ship here</h2>
    <div class="ship">
        <h3>Name: <%= @ships.last.name %></h3><br>
        <h4>Type: <%= @ships.last.type %></h4>
        <h4>Booty: <%= @ships.last.booty %></h4>
    </div><br>
